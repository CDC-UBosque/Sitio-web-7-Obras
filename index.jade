extends ./jade/includes/layout-pages.jade

//- Head html tag

block title
	title 7 Obras

block content
		
	//- Body tag
	body.frontpage
		//- Header & menu
		header
			div.container
				div.row
					div.col
						+header-logo
						+menu
		
		div.main.animsition(data-animsition-in-class="fade-in-up" data-animsition-in-duration="1000" data-animsition-out="fade-out" data-animsition-out-duration="1000")
			div.container
				div.row
					div.col
						
						//- Content & 1
						div.content_box_home
							div.title_items
								h3 Arreglo de <span>7</span> obras del repertorio canciones andinas colombianas para ensamble de jazz
								
							div.menu_items
								h1: a(href='/obras/el-corazon-de-la-cana.html') El corazón de la caña
								h1: a(href='/obras/a-pesar-de-tanto-gris.html') A pesar de tanto gris
								h1: a(href='/obras/pesares.html') Pesares
								h1: a(href='/obras/el-vuelo.html') El vuelo
								h1: a(href='/obras/a-bordo-de-tu-voz.html') A bordo de tu voz
								h1: a(href='/obras/el-beso-que-le-robe-a-la-luna.html') El beso que le robé a la luna
								h1: a(href='/obras/despues-que-me-olvide-de-ti.html') Después que me olvide de tí
								
							div.buttons_right
								a.btn-primary.button.down.animsition-link(href='/obras.html' data-animsition-out-class='fade-out-right' data-animsition-out-duration='1000')
									span Obras 
									
							div.buttons_down
								a.btn-primary.button.down.animsition-link(href='/como-lo-hicimos.html' data-animsition-out-class='fade-out-up' data-animsition-out-duration='1000')
									span ¿Cómo lo hicimos? 
								a.btn-primary.button.down.animsition-link(href='/quienes-lo-hicimos.html' data-animsition-out-class='fade-out-up' data-animsition-out-duration='1000')
									span ¿Quiénes lo hicimos? 
								a.btn-primary.button.down.animsition-link(href='/hablemos.html' data-animsition-out-class='fade-out-up' data-animsition-out-duration='1000')
									span Hablemos
									
							//- Right vertical text (legal)		
							+right-vertical-text
					
		//- Footer	
		+footer-block
		
		
